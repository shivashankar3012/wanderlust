<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h1>Fill the form with new details</h1>
    <form method="post" action="/listings/<%=list._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" class="form-control" value=<%= list.title%> required >
        <div class="invalid-feedback">
          Ttile is required
        </div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Descripton</label>
        <textarea name="listing[description]" class="form-control" required> <%= list.description %> </textarea>
        <div class="invalid-feedback">
          Description is required
        </div>
      </div>
      
      <div class="mb-3">
        <label for="image" class="form-label">Original Image</label><br>
        <img src="<%= originalImgUrl %>" alt="original image" height="200px" width="300px">
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input type="file" name="listing[image]" class="form-control">
      </div>
      
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input required type="number" name="listing[price]" class="form-control" value=<%= list.price%>>
        <div class="invalid-feedback">
          Price is required
        </div>
      </div>
      
      <div class="row">
        
        <div class="col-md-4 mb-3">
          <label for="country" class="form-label">Country</label>
          <input type="text" name="listing[country]" class="form-control" value=<%= list.country%> required>
          <div class="invalid-feedback">
            Country name is required
          </div>
        </div>
        
        <div class="col-md-8 mb-3">
          <label for="location" class="form-label">Location</label>
          <input type="text" name="listing[location]" required class="form-control" value=<%= list.location%> >
          <div class="invalid-feedback">
            location is required
          </div>
        </div>
      
      </div>
      <!-- <br><br> -->
      <button type="submit" class="btn btn-primary add-btn">Edit</button>
    </form>
  </div>
</div>